{
  "extends": "eslint:recommended",
  "rules": {
    "no-console": 0,
    "no-constant-condition": 0,
    "camelcase": 2,
    "quotes": [2, "single"],
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
    "object-curly-spacing": ["error", "never"],
    "keyword-spacing": ["error"],
    "no-lonely-if": 2,
    "comma-style": 2,
    "no-extend-native": 2,
    "no-unused-vars": ["error", { "vars": "all", "args": "after-used" }],
    "no-unused-expressions": ["error", { "allowShortCircuit": true, "allowTernary": true }],
    "no-trailing-spaces": ["error"]
  },
  "globals": {
    "L": true,
    "module": false,
    "require": false,
    "define": false,
    "ActiveXObject": true,
    "Deferred": true,
    "gmxImageLoader": true,
    "gmxParsers": true,
    "gmxSessionManager": true,
    "DataManager": true,
    "StyleManager": true,
    "ScreenVectorTile": true,
    "gmxImageTransform": true,
    "ProjectiveImage": true,
    "VectorTile": true,
    "Observer": true,
    "gmxVectorTileLoader": true,
    "TilesTree": true,
    "gmxMapManager": true,
    "gmxMap": true,
    "gmxAPIutils": true,
    "ArrayBuffer": true,
    "Symbol": true,
    "Promise": true,
    "global": true,
    "process": true,
    "Float32Array": true,
    "Float64Array": true
  },
  "env": {
    "browser": true
  }
}
